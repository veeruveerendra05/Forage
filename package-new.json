{
    "name": "goalforge",
    "version": "1.0.0",
    "description": "Professional SaaS habit tracking and goal achievement platform",
    "main": "server.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "start": "node server.js",
        "start:dev": "nodemon server.js",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "db:migrate": "node scripts/migrate.js",
        "db:seed": "node scripts/seed.js",
        "docker:build": "docker build -t goalforge .",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "docker:logs": "docker-compose logs -f"
    },
    "keywords": [
        "habits",
        "goals",
        "productivity",
        "saas",
        "tracking"
    ],
    "author": "GoalForge Team",
    "license": "MIT",
    "dependencies": {
        "express": "^4.18.2",
        "pg": "^8.11.3",
        "bcrypt": "^5.1.1",
        "jsonwebtoken": "^9.0.2",
        "dotenv": "^16.3.1",
        "cors": "^2.8.5",
        "helmet": "^7.1.0",
        "express-rate-limit": "^7.1.5",
        "rate-limit-redis": "^4.2.0",
        "redis": "^4.6.11",
        "socket.io": "^4.6.1",
        "passport": "^0.7.0",
        "passport-google-oauth20": "^2.0.0",
        "passport-github2": "^0.1.12",
        "passport-strava-oauth2": "^1.0.0",
        "nodemailer": "^6.9.7",
        "zod": "^3.22.4",
        "axios": "^1.6.2",
        "web-push": "^3.6.6",
        "csurf": "^1.11.0",
        "express-session": "^1.17.3",
        "morgan": "^1.10.0",
        "compression": "^1.7.4"
    },
    "devDependencies": {
        "vite": "^5.0.8",
        "jest": "^29.7.0",
        "supertest": "^6.3.3",
        "nodemon": "^3.0.2",
        "eslint": "^8.55.0",
        "@types/jest": "^29.5.11"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    }
}